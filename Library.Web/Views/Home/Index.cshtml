
<div class="row">
    @model IEnumerable<Library.Core.Shared.Book>
    @{
        var i = 0;
        var showForm = false;
    }
    <h1>Books</h1>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
    <div class="form-group">
        <label for="exampleInputEmail1">X</label> @Html.Hidden("x")
    </div>



        
        @*<label>Y</label> @Html.TextBox("y")

        if (ViewBag.Result != null)
        {
            <p>@ViewBag.Result</p>
        }
        <input type="submit" name="operation" value="Get Result" />*@
    }

    <table class="table table-hover">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Author Name</th>
        </tr>
        @foreach (var row in Model)
        {
            i++;
            <tr>
                <td scope="row">@i</td>
                <td>@row.Name</td>
                <td>@row.Author.Name</td>
                <td>
                    <div class="dropdown">
                        <a class="nounderline dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Actions... <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            @if (row.IsGivenUse)
                            {
                                <li><a href="#">Give in use...</a></li>
                            }
                            else
                            {
                                <li><a href="#">Take from use...</a></li>
                            }

                            <li role="separator" class="divider"></li>
                            <li><a href="#">Remove</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
